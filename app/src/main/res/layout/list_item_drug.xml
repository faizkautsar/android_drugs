<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/margin_size_4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/padding_size_16"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="@dimen/corner_size_6"
            android:layout_width="@dimen/general_size_64"
            android:layout_height="@dimen/general_size_64">

            <ImageView
                android:id="@+id/drug_image"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_size_16"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/drug_name"
                android:textSize="@dimen/text_size_18"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/margin_size_4"
                android:id="@+id/drug_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/margin_size_4"
                android:id="@+id/drug_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:id="@+id/drug_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:textAppearance="@android:style/TextAppearance.Small"/>

            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:id="@+id/drug_effect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:textAppearance="@android:style/TextAppearance.Small"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>