<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DetailNarcoticaActivity"
    tools:showIn="@layout/activity_detail_narcotica">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/narkotik_jenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#424141"
            android:text="Golongan : " />
        <TextView
            android:id="@+id/narkotik_gol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#424141"
            android:text="keterangan"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <org.sufficientlysecure.htmltextview.HtmlTextView
            android:id="@+id/narkotik_ket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF0404"
            android:text="Dampak"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>
        <org.sufficientlysecure.htmltextview.HtmlTextView
            android:layout_margin="2dp"
            android:id="@+id/narkotik_dampak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>